[Unit]
Description=Balena device UUID
Requires=resin-boot.service bind@ROOT_HOME@-.rnd.service
After=resin-boot.service bind@ROOT_HOME@-.rnd.service os-config-devicekey.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=@BASE_BINDIR@/bash @BINDIR@/balena-unique-key uuid

[Install]
WantedBy=basic.target
