[Unit]
Description=Balena supervisor updater
Requires=\
    balena.service \
    bind-etc-balena-supervisor.service \
    tmp.mount \
    balena-net-connectivity-wait.target
Wants=\
    mnt-boot.mount \
    balena-supervisor.service
After=\
    balena.service \
    tmp.mount \
    mnt-boot.mount \
    bind-etc-balena-supervisor.service \
    balena-supervisor.service \
    balena-net-connectivity-wait.target

[Service]
Type=simple
ExecStart=@BASE_BINDIR@/sh @BINDIR@/update-balena-supervisor
StandardOutput=null
StandardError=null

[Install]
Alias=update-resin-supervisor.service
